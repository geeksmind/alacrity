<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginTop="20dp" android:id="@+id/radioGroupOptions">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/light_off"
                android:id="@+id/radioButtonOff" android:checked="true"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/light_on"
                android:id="@+id/radioButtonOn" android:checked="false"/>
    </RadioGroup>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/emit"
            android:id="@+id/buttonEmit" android:layout_marginTop="20dp"
            android:enabled="false"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginTop="10dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:id="@+id/textViewStatusTitle" android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/default_status"
                android:id="@+id/textViewStatusContent" android:layout_weight="3"/>
    </LinearLayout>
</LinearLayout>